public class DLLMain {
    public static void main(String[] args) {

        DoublyLinkedList dll = new DoublyLinkedList();

        dll.insertAtBeginning(10);
        dll.insertAtBeginning(20);
        dll.insertAtEnd(30);
        dll.insertAtEnd(40);
        dll.insertAtEnd(5);
        dll.insertAtEnd(50);

        dll.displayForward();
        dll.displayBackward();

        dll.deleteFirst();
        dll.deleteLast();
        dll.deleteByValue(20);

        dll.displayForward();
        dll.findMinMax();
    }
}
